{
  "name": "@lukekarrys/audiobook",
  "description": "Take some wav files and try to make a chapterized mp3.",
  "version": "0.0.2",
  "bin": {
    "audiobook": "./cli.js"
  },
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "lodash": "^4.17.10",
    "minimist": "^1.2.0",
    "rimraf": "^2.6.2",
    "single-line-log": "^1.1.2"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [],
  "license": "MIT",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.py": [
      "pycodestyle",
      "git add"
    ]
  },
  "main": "index.js",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "lint": "prettier --write '**/*.{js,md,json}' && eslint --fix . && pycodestyle .",
    "start": "./cli.js"
  }
}
